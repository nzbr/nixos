{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:base"],
  lockFileMaintenance: {
    enabled: true,
    extends: ["schedule:weekly"],
  },
  nix: {
    enabled: true,
  },
  regexManagers: [
    {
      fileMatch: ["^.*\\.nix$"],
      matchStrings: [
        'image *= *"(?<depName>[^"]+):(?<currentValue>[^"]+)(@(?<currentDigest>sha256:[a-f0-9]+))?";',
      ],
      datasourceTemplate: "docker",
    },
  ],
}
